{
  "name": "shoporia-app",
  "version": "1.0.0",
  "description": "Shoporia - Modern E-commerce Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": [
    "react",
    "shoporia",
    "ecommerce",
    "firebase",
    "mongodb"
  ],
  "author": "Saksham Shakya",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
